<div class="container" style ="margin-top: 5em">
    <div class="rows">
    
    <form action="/home/write" method="POST">
    
      
        <div id="rating_bar">
          <input type="radio" id="rate_5" name="rating_f" value="5" />
          <label for="rate_5" title="Not effective!"></label>
          
          <input type="radio" id="rate_4" name="rating_f" value="4" />
          <label for="rate_4" title="Kinda effective!"></label>
          
          <input type="radio" id="rate_3" name="rating_f" value="3" />
          <label for="rate_3" title="Effective!"></label>
          
          <input type="radio" id="rate_2" name="rating_f" value="1" />
          <label for="rate_2" title="Pretty effective!"></label>
          
          <input type="radio" id="rate_1" name="rating_f" value="1" />
          <label for="rate_1" title="Super effecitive!"></label>
        </div>
        
        <div class="form-group">
          <label for="content">내용:</label>
          <textarea name="content" class="form-control" rows="5" id="content"></textarea>
        </div>
        
        <button type="submit" class="btn btn-default">작성하기</button>
 
        
    </form>
    
    <% @every_review.each do |p| %>
        <div class="well" style="margin-top: 3em">
            <span style="font-weight: bold; font-size: 20px">#<%= p.id %></span><div style="float: right;"><%= p.created_at.in_time_zone("Asia/Seoul").strftime("%Y년%m월%d일 %H시%M분%S초") %> 
            <a href='/update/<%= p.id %>'>수정</a> <a href='/destroy/<%= p.id %>'>삭제</a></div>
            <h3 style="font-weight: bold"><%= p.title %></h3>
            <p><%= p.content %></p>
            <p><%= p.user.email %></p>
            
        </div>
    <% end %>
    
    
    
        
    </div>
</div>

